

<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
        <label for="title">Title</label>
        <input type="text" class="form-control" name='title' value="{{idea.title}}" required/>
        <label for="details">Details</label>
        <textarea name="details" id="details" class="form-control" required>{{idea.details}}</textarea>
        <button type="submit" class="btn btn-large mt-3 float-right btn-primary">Submit</button>
    </form>
</div>