<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h2 class="text-center">Edit <%= campground.location %> Campground</h2>
            <form action='/campgrounds/<%= campground._id %>/?_method=PUT' method="POST">
                <div class="form-group">
                    <input type="text" id="name" class='form-control' value="<%= campground.location %>"
                        name="campground[location]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" id="image" class='form-control' value="<%= campground.image %>"
                        name="campground[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input type="text" id="description" class='form-control' value="<%= campground.description %>"
                        name="campground[description]" placeholder="Description">
                </div>
                <button type="submit" class="btn btn-block btn-primary">Update</button>
            </form>
            <a href="/">Go back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>