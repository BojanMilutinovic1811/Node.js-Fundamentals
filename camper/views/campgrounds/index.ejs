<% include ../partials/header %>

<h3 class="title">Campgrounds</h3>
<div class="row d-flex flex-wrap justify-content-center">
    <% campgrounds.forEach(campground => { %>

    <div class="col-md-3 m-2 col-sm-6 card p-1">
        <img class="card-img-top img-fluid" src="<%= campground.image %>" />
        <div class="card-body">
            <h5 class="card-title"><%=campground.location %></h5>
            <p class="card-text"><%= campground.description %></p>
            <a href="/campgrounds/<%= campground._id%>" class="btn btn-block btn-primary">More Details</a>

        </div>
    </div>
    <% }) %>
</div>




<% include ../partials/footer %>