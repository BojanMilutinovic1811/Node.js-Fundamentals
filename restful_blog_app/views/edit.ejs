<% include partials/header %>

<div class="ui centered grid">
    <form class="ui form blog-form eight wide column" action="/blogs/<%=blog._id%>?_method=PUT" method="post">
        <div class="ui huge header">Edit Post</div>
            <div class="field">
                <label>Title:</label>
                <input type="text" name="blog[title]" value='<%= blog.title %>'>
            </div>
            <div class="field">
                <label>Image URL:</label>
                <input type="text" name="blog[image]" value='<%= blog.image %>'>
            </div>
            <div class="field">
                <label>Body:</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>
                <button class="ui button" type="submit">Submit</button>
    </form>
</div>

<% include partials/footer %>