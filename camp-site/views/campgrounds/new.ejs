<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h2 class="text-center">Create a Camp-Site</h2>
            <form action='/campgrounds' method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" class='form-control' name="campgrounds[location]" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for='image'>Image</label>
                    <input type="text" id="image" class='form-control' name="campgrounds[image]"
                        placeholder="Image URL">
                </div>
                <div class="form-group">
                    <label for='description'>Description</label>
                    <input type="text" id="description" class='form-control' name="campgrounds[description]"
                        placeholder="Description">
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </form>
            <a href="/">Go back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>